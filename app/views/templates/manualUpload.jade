extends ../layout
block content
  div(ng-controller='UploadController')
    h1 #{menu}
    h3 选择想上传文件目录下的某一文件:
    input(id='fileinput',type='file')
    h4 选择的目录: {{dir}}
    button.btn.btn-default(ng-click="read()") 读取
    table.table
      tr
        th PatientID
        th PatientName
        th StudyInstanceUID
      tr(ng-repeat='item in readResults.studies')
        td {{item.PatientID}}
        td {{item.PatientName}}
        td {{item.StudyInstanceUID}}
    h4  dcm文件数量: {{readResults.dcmCount}}
    button.btn.btn-default(ng-click="upload()") 上传
    h4 {{message}}